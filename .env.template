# n8n Environment Variables Template
# Copy this file to .env.local and fill in the actual values
# DO NOT commit .env.local to version control

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
# Database connection URL for PostgreSQL
# Format: postgresql://username:password@host:port/database
DB_POSTGRESDB_HOST=your-postgres-host
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=your-db-username
DB_POSTGRESDB_PASSWORD=your-db-password
DB_POSTGRESDB_SCHEMA=public

# Alternative: Full database URL (use this OR the individual settings above)
# DB_POSTGRESDB_URL=postgresql://username:password@host:port/database

# =============================================================================
# N8N CORE CONFIGURATION
# =============================================================================
# Protocol for n8n instance (http or https)
N8N_PROTOCOL=https

# Host where n8n will be accessible
# For App Platform, this will be your app's domain
N8N_HOST=your-app-name.ondigitalocean.app

# Port n8n will run on (App Platform uses 5678 by default)
N8N_PORT=5678

# Webhook URL for external services to call n8n
# Should match your public domain
WEBHOOK_URL=https://your-app-name.ondigitalocean.app/

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Encryption key for securing stored credentials (REQUIRED)
# Generate a secure random string (32+ characters)
N8N_ENCRYPTION_KEY=your-32-character-encryption-key-here

# JWT secret for session management
# Generate a secure random string
N8N_USER_MANAGEMENT_JWT_SECRET=your-jwt-secret-here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Basic auth credentials (optional, for additional security)
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=your-basic-auth-password

# Timezone setting
# GENERIC_TIMEZONE=UTC

# Log level (error, warn, info, verbose, debug, silly)
# N8N_LOG_LEVEL=info

# Maximum payload size for requests
# N8N_PAYLOAD_SIZE_MAX=16

# =============================================================================
# BINARY DATA STORAGE (Enterprise Feature)
# =============================================================================
# For external binary storage using DigitalOcean Spaces (S3-compatible)
# N8N_DEFAULT_BINARY_DATA_MODE=s3
# N8N_BINARY_DATA_S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
# N8N_BINARY_DATA_S3_REGION=nyc3
# N8N_BINARY_DATA_S3_BUCKET=your-spaces-bucket-name
# N8N_BINARY_DATA_S3_ACCESS_KEY_ID=your-spaces-access-key
# N8N_BINARY_DATA_S3_SECRET_ACCESS_KEY=your-spaces-secret-key

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Enable development mode (set to false for production)
# N8N_METRICS=false
# N8N_DIAGNOSTICS_ENABLED=false